        AC_MSG_RESULT($withval)
     elif test -f $withval/include/json.h; then
        owd=`pwd`
        if cd $withval; then withval=`pwd`; cd $owd; fi
        JSONINC="-I$withval/include/json"
        JSONLIB="-L$withval/lib -L$withval/src -ljson"
        ac_my_libjson=$withval
        AC_MSG_RESULT($withval)
     else
        AC_MSG_RESULT(no)
        AC_MSG_ERROR([json.h not found in $withval])
